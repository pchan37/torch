var (_, __, screenWidth, screenHeight) = view.screenBox(#workarea);

var APP_WIDTH = screenWidth / 2;
var BEFORE_SEARCH_HEIGHT = screenHeight / 15;
var AFTER_SEARCH_HEIGHT = screenHeight / 3;
var SEARCH_RESULT_HEIGHT = screenHeight / 4;

function center() {
    var (_screenXCor, _screenYCor, screenWidth, screenHeight) = view.screenBox(#workarea);
    var topLeftX = (screenWidth - APP_WIDTH) / 2;
    var topLeftY = (screenHeight - BEFORE_SEARCH_HEIGHT) / 2; 

    view.move(topLeftX, topLeftY, APP_WIDTH, BEFORE_SEARCH_HEIGHT, true);
}

function self.ready() {
    center();
}
